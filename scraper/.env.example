# Hope Platform Scraper - Environment Variables Template
# Copy this file to .env and fill in actual values

# Scraper Database (uses sync driver)
SCRAPER_DATABASE_URL=postgresql://hope_user:YOUR_SECURE_PASSWORD_HERE@localhost:5432/hope_db

# NYC Open Data API (optional - increases rate limits)
# Get token at: https://data.cityofnewyork.us/profile/app_tokens
NYC_OPEN_DATA_APP_TOKEN=

# User Agent for web scraping
USER_AGENT=HopePlatform/1.0

# Backend settings (required since scraper imports backend models)
# Backend uses async driver
DATABASE_URL=postgresql+asyncpg://hope_user:YOUR_SECURE_PASSWORD_HERE@localhost:5432/hope_db
SECRET_KEY=GENERATE_RANDOM_SECRET_KEY_HERE_64_CHARS_MINIMUM
ENCRYPTION_KEY=GENERATE_RANDOM_ENCRYPTION_KEY_HERE_64_CHARS_MINIMUM
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24
ALLOWED_ORIGINS=["http://localhost:8081"]
ENVIRONMENT=development
RATE_LIMIT_ENABLED=true
REDIS_URL=redis://localhost:6379/0
