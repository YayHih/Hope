{
  "expo": {
    "name": "Hope Platform",
    "slug": "hope-platform",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#051F67"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "org.hopeplatform.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Hope Platform uses your location to find nearby homeless services and resources.",
        "CFBundleAllowMixedLocalizations": true
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#051F67"
      },
      "package": "org.hopeplatform.app",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Hope Platform to use your location to find nearby services."
        }
      ],
      "expo-secure-store",
      "@sentry/react-native/expo"
    ],
    "hooks": {
      "postPublish": [
        {
          "file": "@sentry/react-native/expo",
          "config": {
            "organization": "hope-platform",
            "project": "hope-mobile"
          }
        }
      ]
    },
    "extra": {
      "eas": {
        "projectId": ""
      }
    }
  }
}
