# Hope Platform Backend - Environment Variables Template
# Copy this file to .env and fill in actual values
# NEVER commit the .env file to version control!

# Database Configuration
# Format: postgresql+asyncpg://username:password@host:port/database
DATABASE_URL=postgresql+asyncpg://hope_user:YOUR_SECURE_PASSWORD_HERE@localhost:5432/hope_db

# Security - GENERATE STRONG RANDOM KEYS
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=GENERATE_RANDOM_SECRET_KEY_HERE_64_CHARS_MINIMUM
ENCRYPTION_KEY=GENERATE_RANDOM_ENCRYPTION_KEY_HERE_64_CHARS_MINIMUM
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_HOURS=24

# CORS Configuration
# Add your frontend domains here (comma-separated in JSON array format)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8081","https://yourdomain.com"]

# Environment
ENVIRONMENT=production

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Redis (optional - for distributed rate limiting)
REDIS_URL=redis://localhost:6379/0

# Backend Host (your domain name)
BACKEND_HOST=yourdomain.com
